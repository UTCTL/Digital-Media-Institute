<% content_for :content do %>
  <div id="scroll">
  	<div id="scroll-inner">
  	<div id="intro">
  			<div class="thumbnail intro_video"></div>
  			<a class="intro_video" href="http://vimeo.com/40036508">Watch the video</a>
  	</div>
  	</div>
  	
  </div>
  <% if flash.any? -%>
    <div id="flash_messages">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
  <% end -%>
  <div id="content"><%= yield %></div>
  <script type="text/javascript">
	$(".intro_video").fancybox({
		'padding'		: 0,
		'autoScale'		: true,
		'transitionIn'	: 'fade',
		'transitionOut'	: 'fade',
		'width'			: 640,
		'height'		: 360,
		'href'			: 'http://player.vimeo.com/video/40036508?title=0&amp;byline=0&amp;portrait=0&autoplay=true',
		'type'			: 'iframe'
	});
	</script>
<% end %>

<%= render :template => 'layouts/application' %>