<h2>Sign in</h2>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], :autofocus => "" %>
  </div>
  
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions"><%= submit_tag "Sign In" %></div>
<% end %>
