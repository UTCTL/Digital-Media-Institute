<% path_string = "#{ submission.answerable_type.downcase }_submission_path" -%>
<div id="answerContent">
  <h3>Your Answer</h3>
  <% if submission.media_type == 'image' -%>
    <%= image_tag submission.attachment.url %>
  <% else -%>
    <%= link_to submission.link, submission.link, :target => '_blank' %>
  <% end -%>
  <div>
    <%= link_to "Delete Answer", send(path_string,submission.answerable_id,submission),
                :method => :delete, 
                :remote => true, 
                :confirm => "Are you sure?",
                :disable_with => "Deleting..." if can? :destroy, submission %>
  </div>
</div>
