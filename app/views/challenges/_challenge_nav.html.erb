<% @skill.skill_challenges.categories.each do |c| -%>

  <%= link_to c.title,
          categorized_challenge_path(@skill.slug,c.first_child),
          :class => "accordian-header" %>
<% end -%>

<% if can? :create, Challenge -%>
  <%= link_to "+ Add Challenge", new_categorized_challenge_path(@skill.slug), 
        :class => "accordian-header add-button" %>
<% end -%>

