<% content_for :sidebar do %>

  <%= render "shared/sidebar_nav"%>
<% end %>

<h2>New Challenge</h2>

<%= form_for(@challenge) do |f| %>
  <%= render "shared/error_messages", :obj => @challenge %>
  
  <% if @skill_challenge %>
    <div id="skillChallengeField">
      <%= hidden_field(:skill_challenge,:skill_id) %>
      <%= hidden_field(:skill_challenge,:parent_id) %>
    </div>
  <% end %>
  
  <%= render "fields", :f => f %>
  
  <div class="actions">
    <%= f.submit "Save", :disable_with => 'Saving...' %>
  </div>
<% end -%>

<script>
  $( function(){ challengeForm.init() });
</script>
