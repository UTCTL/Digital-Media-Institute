<% content_for :sidebar do %>

  <%= render "shared/sidebar_nav"%>
<% end %>

<% if @skill -%>
  <h2><%= short_title @skill %></h2>
  <%= render :partial => 'challenge_nav' %>
  <%  url = categorized_challenge_path(@skill.slug,@challenge) -%>
<% else -%>
  <%  url = challenge_path(@challenge) -%>
<% end -%>

<h2>Edit Challenge</h2>

<%= form_for(@current_challenge, :url => url) do |f| %>
  <%= render "shared/error_messages", :obj => @current_challenge %>

  <% if @skill %>
    <div style="padding:0; margin:0; display:inline">
      <%= hidden_field(:skill, :id) %>
    </div>
  <% end %>

  <%= render "fields", :f => f %>
  
  <div class="actions">
    <%= f.submit "Save", :disable_with => 'Saving...' %>
  </div>
<% end -%>

<script>
  var cform;
  $( function(){ cform =  challengeForm() });
</script>
