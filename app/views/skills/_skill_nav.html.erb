<h4><%= link_to "\u2190 #{@skill.title}", "#{skills_path}/#{@skill.slug}"%></h4>

<ul class="skill_tree">
  <li>
    <span class="top_level">Lessons</span>
    <ul>
    <% @skill.lessons.each do |item| %>
      
      <% link_class = (@lesson && @lesson.id == item.id) ? "current": "" %>
    
      <li><%= link_to item.title, "#{skills_path}/#{@skill.slug}/lessons/#{item.id}", :class => link_class %></li>
    <% end %>
    </ul>
  </li>
  <li><span class="top_level">Challenges</span></li>
  <li><span class="top_level">Links</span></li>
</ul>
