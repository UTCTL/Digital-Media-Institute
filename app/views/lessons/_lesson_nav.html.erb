<% lessons = @skill.lessons.list_scope(1); -%>

<% lessons.each do |l| -%>
  <%= link_to l.title, categorized_lesson_path(@skill.slug,l), 
                                    :class => "challenge-header" %>
<% end -%>

<% if can? :create, Lesson -%>
  <%= link_to "+ Add Lesson", new_categorized_lesson_path(@skill.slug),
                              :class => "challenge-header" %>
<% end -%>
