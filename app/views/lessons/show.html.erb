<% content_for :sidebar do %>

<%=render "shared/skill_nav" %>
<% end %>

<h2><%= @title%></h2>

<% if admin? %>
  <div id="adminLinks">
    <%= link_to "Edit", edit_training_lesson_path %>
    <%= link_to "Delete", training_lesson_path, :method => :delete, :confirm => "Are you sure you want to delete this lesson?" %>
  </div>
<% end %>

<% if @lesson.kind == "Video" %>
  <%= render "videoplayer", :player_link => player_link(@lesson.link) %>
<% end %>
  
<div id="lessonContent" class="itemContent">
  <%= sanitize @lesson.content %>
</div>
