<% content_for :sidebar do %>

  <%= render "shared/sidebar_nav"%>
<% end %>

<% content_for :topnav do -%>
  <% if @skill -%>
  <div id="lesson-accordian">
    <h2><%= short_title @skill %></h2>
    <%= render :partial => 'lesson_nav' %>
  </div>
  <% end -%>
<% end -%>

<script>
  var lessonDestroyCallback = function(){ 
    $("#lesson-accordian").ajax_accordian("removeHeader");
  };

  var lessonCreateCallback = function(obj){
    $("#lesson-accordian").ajax_accordian("close");
    $("#lesson-accordian").ajax_accordian("addHeader",obj);
  }

  $(function(){
    $("#lesson-accordian").ajax_accordian();
  });
</script>
